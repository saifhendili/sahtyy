{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block section %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
<section class="mypage" >
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{'attr':{'class':'form-control'}}) }}
        
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
         {{ form_row(registrationForm.nom,{'attr':{'class':'form-control'}}) }}
          {{ form_row(registrationForm.prenom,{'attr':{'class':'form-control'}}) }}
           {{ form_row(registrationForm.adress,{'attr':{'class':'form-control'}}) }}
            {{ form_row(registrationForm.type,{'attr':{'class':'form-control'}}) }}
            {# {{ form_row(registrationForm.speciality,{'attr':{'class':'form-control'}}) }} #}
        {# {{ form_row(registrationForm.agreeTerms,{'attr':{'class':'form-control'}}) }} #}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    </section>
{% endblock %}
