{% extends 'base.html.twig' %}

{% block title %}FormAide index{% endblock %}

{% block section %}
<section class="mypage"></section>
    <h1>Form d'aide</h1>
{% if app.user%}

<a href="{{ path('form_aide_new') }}">Create new</a>
{% endif %}
<section class="myPublication">


   {% for form_aide in form_aides %}
        <div class="card mycardpublication" style="width: 18rem;">
            <img class="card-img-top" src="{{ form_aide.img }}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ form_aide.nom }}</h5>
                <p class="card-text">{{ form_aide.textpub }}dt</p>

                <a href="{{ path('form_aide_show', {'id': form_aide.id}) }}"class="btn btn-primary">show</a>
                  
                {% if form_aide.getIdUser() == app.user.id  %}
                    <a href="{{ path('form_aide_edit', {'id': form_aide.id}) }}" class="btn btn-primary">edit</a>
                    {{ include('form_aide/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>





     

    {% endfor %}
    </section>




    
{% endblock %}
