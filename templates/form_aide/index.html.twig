{% block title %}FormAide index{% endblock %}

{% block section %}
<section class="mypage"></section>
    <div class="head-mybody">
    <h1>Form d'aide</h1>
{% if app.user%}

<a class="btn btn-primary"href="{{ path('form_aide_new') }}"><i class="fas fa-plus"></i> Ajouter </a>
{% endif %}
</div>
    
<section class="container">
<div class="row">
<div class="col-md-3">
{% include 'form_aide/_filter.html.twig' with {form:form} only %}
</div>
<div class="col-md-9">
<div class="grid">
   {% for form_aide in form_aides %}
   {% if form_aide.quantit > 0 %}
