{% extends 'base.html.twig' %}

{% block title %}Medecin index{% endblock %}

{% block section %}
    <section class="mypage"></section>
    <h1>Medecin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Num</th>
                <th>Specialite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td>{{ medecin.id }}</td>
                <td>{{ medecin.nom }}</td>
                <td>{{ medecin.prenom }}</td>
                <td>{{ medecin.num }}</td>
                <td>{{ medecin.Specialite }}</td>
                <td>
                    <a href="{{ path('medecin_show', {'id': medecin.id}) }}">show</a>
                    <a href="{{ path('medecin_edit', {'id': medecin.id}) }}">edit</a>
                    <a href="{{ path('medecin_delete', {'id': medecin.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('medecin_new') }}">Create new</a>
{% endblock %}
